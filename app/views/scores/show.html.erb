<div class="page-header">
  <h1>My Score
    <small>
      &nbsp;&nbsp;Date:&nbsp;<%=@score.date%>&nbsp;
      <%= link_to "Edit", edit_score_path(@score.id),class: 'btn btn-success btn-md' %>
      <%= link_to "Delete", @score, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-md' %>
    </small>
  </h1>
</div>

<div class="panel panel-<%=@score.category.color%>">
  <div class="panel-heading"><h2><%=@score.course.name%></h2></div>
  <div class="panel-body">
    <h2>&nbsp;&nbsp;&nbsp;SCORE:&nbsp;&nbsp;  OUT&nbsp;&nbsp;<%=@score.score_out%>&nbsp;+&nbsp;IN&nbsp;&nbsp;<%=@score.score_in%>&nbsp;=&nbsp;&nbsp;&nbsp;<span style="color:#ff0000; font-size:40px;">TOTAL&nbsp;&nbsp;&nbsp;<%=@score.score_total%></span></h2>
    <h3 style="color: gray;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Putting:&nbsp;&nbsp; OUT&nbsp;&nbsp;<%=@score.put_out%>&nbsp;+&nbsp;IN&nbsp;&nbsp;<%=@score.put_in%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;(Total Put:&nbsp;&nbsp;<%=@score.put_total%>)</h3>
    <div class="comment">
      <hr>
      <h3>Comment:&nbsp;&nbsp; <%=@score.memo%></h3>
    </div>
  </div>
</div>
<% if @score.image2? %>
　　<%= image_tag @score.image2.url %>
　<% else %>
　　<%= image_tag 'noimage.gif' %>
　<% end %>